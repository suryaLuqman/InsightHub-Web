      // Image Preview
      function readURL(input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.onload = function(e) {
            $("#imagePreview img").attr("src", e.target.result);
            $("#imagePreview").removeClass("d-none");
            $("#dropzone").addClass("d-none");
