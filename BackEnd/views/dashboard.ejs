  <script>
document.addEventListener("DOMContentLoaded", function() {
  const searchInput = document.getElementById("searchInput");
  const searchModal = new bootstrap.Modal(document.getElementById("searchModal"));

  // Function to handle search and display modal
  function handleSearch() {
    const searchTerm = searchInput.value.trim().toLowerCase();

    // Fetch and display articles based on search term
    fetchArticles(searchTerm);

    // Show the modal
    searchModal.show();
  }

  // Function to fetch articles based on search term
  function fetchArticles(searchTerm) {
    // Mock data (replace this with actual API call)
    const articlesData = {
      success: true,
      message: "All Artikel retrieved successfully",
      data: [{
        id: 1,
        judul: "Artikel ilmu ilmu kebenaran part 3",
        deskripsi: "Isi deskripsi",
        link: "http://google.com",
        gambar_artikel: "https://ik.imagekit.io/jeniriska/1712014704714_CUSwmQ12k.png",
        fileId: "f42f97068ff04a526883b57f48df2548e8a055772a268bc5810f0a1302e15ef8",
        kategoriId: [3],
        authorId: 1,
        createdAt: "2024-04-01T23:38:30.922Z",
        updatedAt: "2024-04-01T23:38:30.922Z",
        ratings: [],
        kategori: [{
          id: 3,
          nama: "Sistem pakan",
          deskripsi: "Artikel-artikel tentang pikiran buatan"
        }],
        avgRating: 0
      },
      // Other articles data...
      ]
    };

    // Filter articles based on search term
    const filteredArticles = articlesData.data.filter(article => article.judul.toLowerCase().includes(searchTerm));

    // Display articles in modal body
    const modalBody = document.querySelector(".modal-body");
    modalBody.innerHTML = ""; // Clear previous content

    if (filteredArticles.length === 0) {
      modalBody.innerHTML = "<p>No articles found.</p>";
    } else {
      filteredArticles.forEach(article => {
        const articleCard = `
          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="${article.gambar_artikel}" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">${highlightSearchTerm(article.judul, searchTerm)}</h5>
                  <p class="card-text">${article.deskripsi}</p>
                  <a href="${article.link}" class="btn btn-primary">Read more</a>
                </div>
              </div>
            </div>
          </div>
        `;
        modalBody.insertAdjacentHTML("beforeend", articleCard);
      });
    }
  }

  // Function to highlight search term in article title
  function highlightSearchTerm(title, term) {
    const regex = new RegExp(term, "gi");
    return title.replace(regex, match => `<mark>${match}</mark>`);
  }

  // Event listener for form submission
  document.querySelector("form").addEventListener("submit", function(event) {
    event.preventDefault();
    handleSearch();
  });

  // Event listener for input change
  searchInput.addEventListener("input", function() {
    // Update input in modal header
    document.querySelector("#searchModalLabel").textContent = `Cari artikel: ${searchInput.value}`;
  });

  // Event listener for input click to show modal
  searchInput.addEventListener("click", function() {
    handleSearch();
  });
});

  </script>
