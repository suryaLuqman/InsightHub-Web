<!-- Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <input type="text" class="form-control mb-3" id="searchInputModal" placeholder="Ketik disini...">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div id="articleList"></div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInputModal = document.getElementById("searchInputModal");
        const articleList = document.getElementById("articleList");
        const searchModal = new bootstrap.Modal(document.getElementById("searchModal")); // tambahkan ini

        // Function to handle search and display articles
        function handleSearch() {
            const searchTerm = searchInputModal.value.trim().toLowerCase();

            // Mock data (replace with actual API call)
            const articlesData = [{
                id: 1,
                judul: "Artikel ilmu ilmu kebenaran part 3",
                deskripsi: "Isi deskripsi",
                link: "http://google.com",
                gambar_artikel: "https://ik.imagekit.io/jeniriska/1712014704714_CUSwmQ12k.png",
                fileId: "f42f97068ff04a526883b57f48df2548e8a055772a268bc5810f0a1302e15ef8",
                kategoriId: [3],
                authorId: 1,
                createdAt: "2024-04-01T23:38:30.922Z",
                updatedAt: "2024-04-01T23:38:30.922Z",
                ratings: [],
                kategori: [{
                    id: 3,
                    nama: "Sistem pakan",
                    deskripsi: "Artikel-artikel tentang pikiran buatan"
                }],
                avgRating: 0
            },
            // Add more article data here
            ];

            // Filter articles based on search term
            const filteredArticles = articlesData.filter(article => article.judul.toLowerCase().includes(searchTerm));

            // Display filtered articles
            renderArticles(filteredArticles);
        }

        // Function to render articles in modal
        function renderArticles(articles) {
            if (articles.length === 0) {
                articleList.innerHTML = "<p>No articles found.</p>";
            } else {
                articleList.innerHTML = articles.map(article => `
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="${article.gambar_artikel}" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">${article.judul}</h5>
                                    <p class="card-text">${article.deskripsi}</p>
                                    <a href="${article.link}" class="btn btn-primary">Read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                `).join('');
            }
        }

        // Event listener for input change
        searchInputModal.addEventListener("input", handleSearch);

        // Event listener for input click to show modal
        searchInputModal.addEventListener("click", function() {
            searchModal.show();
        });

        // Initial rendering
        handleSearch();
    });
</script>


