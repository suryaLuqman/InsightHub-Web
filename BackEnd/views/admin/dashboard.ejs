  <title>Dashboard</title>

  <style>
    .card {
      border: none;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
      /* Increase shadow for better depth perception */
      background-color: #ffb423;
      border-radius: 10px;
      transition: transform 0.2s ease-in-out;
    }

    .card:hover {
      transform: scale(1.02);
      /* Slightly enlarge cards on hover for a dynamic effect */
    }

    .card-body {
      padding: 20px;
      display: flex;
      /* Use flexbox for center alignment */
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    .card-title {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
      color: #f8f9fa;
      text-align: center;
      /* Center align text */
    }

    .sidenav {
      padding: 20px 0;
      /* Add vertical padding */
    }

    .sidenav a {
      background-color: #f8f9fa;
      color: #2B1260;
      padding: 10px 20px;
      /* Add padding for larger click area */
      border-radius: 5px;
      /* Add border radius for softer edges */
      margin-bottom: 10px;
      /* Add margin for spacing */
      display: block;
      /* Make links block elements */
    }

    .sidenav a:hover,
    .sidenav a:focus {
      background-color: #2B1260;
      color: #f8f9fa;
      text-decoration: none;
      /* Remove underline */
    }

    .sidenav a.active{
      background-color: #2B1260;
      color: #f8f9fa;
    }

    .sidenav li {
      margin-bottom: 5px;
    }

    .sidenav li:last-child {
      margin-bottom: 0;
    }

    button.logout-btn {
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
    }

    .trash {
      color: red;
    }
  </style>

</head>

